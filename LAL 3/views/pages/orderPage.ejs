<%- include('../partials/head.ejs') %>

<div class="container-fluid bg-light" style="min-height:80vh">
  <section class="vh-100" >
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
  
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Book Yours Now</p>
  
                  <form class="mx-1 mx-md-4"  action="/order" method="post">
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="text" id="form3Example1c" class="form-control" value="<%= values.name ? values.name : '' %>" required  name="name"/>
                        <label class="form-label" for="form3Example1c">Your Name</label>
                      </div>
                      
                    </div>
                    <% if(error.name) {%> 
                      <p class="text-danger"><%= error.name %> </p>
                    <% }%> 
                    
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="email" id="form3Example3c" class="form-control"  value="<%= values.email ? values.email : ''%>"  name="email"/>
                        <label class="form-label" for="form3Example3c">Your Email</label>
                      </div>
                    </div>
                    <% if(error.email) {%> 
                      <p class="text-danger"><%= error.email %> </p>
                    <% }%> 
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-phone fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="text" id="form3Example4c" class="form-control" name="phone" value="<%= values.phone ? values.phone : ''%>"  id="f" required />
                        <label class="form-label" for="form3Example4c">Phone</label>
                      </div>
                    </div>
                    <% if(error.phone) {%> 
                      <p class="text-danger"><%= error.phone %> </p>
                    <% }%>


                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fa-solid fa-building fa-lg me-3 fa-fw"></i>
                        <script>
                          function update() {
                              var d = document.getElementById('country');
                              var dText = d.options[d.selectedIndex].text;
                              document.getElementById('result').value = dText
                          }
                        </script>
                      
                        <select id="country" class="py-2 px-4 w-100" onchange="update();">
                            <option class="py-2 px-5" value="none">Select Project</option>
                            <option class="bg-danger" style="height: 30px;" value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                            <option value="4">Four</option>
                            <option value="5">Five</option>
                            <option value="6">Six</option>
                            <option value="7">Seven</option>
                            <option value="8">Eight</option>
                          </select>
                        <input id="result" name="project_name" class="d-none">
                    </div>
                    <p class="text-danger "><%= error.project_name ? error.project_name : ''%> </p>


                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-location fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="text" id="form3Example4cd" class="form-control" value="<%= values.aria_pref ? values.aria_pref : ''%>"/>
                        <label class="form-label" for="form3Example4cd">Aria Preferences</label>
                      </div>
                    </div>
  
  
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <button type="submit" class="btn btn-primary btn-lg">Book Now</button>
                    </div>
  
                  </form>
  
                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
  
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                    class="img-fluid" alt="Sample image">
  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<%- include("../partials/footer") %>