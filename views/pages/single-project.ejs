<%- include('../partials/head.ejs') %>



  <div class="container">
    <center class="my-3">
      <h1>
        <%= project.title %>
      </h1>
    </center>
    <div class="row my-3 py-5">
      <div class="col-6 d-flex alighn-items-center justify-content-center">
        <img width="70%" height="100%" src="/upload/projects/<%= project.thumbnail %>" alt="">
      </div>
      <div class="col-6 d-flex flex-column alighn-items-center justify-content-start">
        <div class="info-section">
          <div class="info d-flex align-items-center gap-5 my-3">
            <img width="50" src="\images\Address.png" alt="">
            <h4>Address</h4>
            <span class="fs-5"><%= project.address %> </span>
          </div>

          <div class="info d-flex align-items-center gap-5 my-3">
            <img width="50" src="\images\Commercial-Space-Size.png" alt="">
            <h4>Apartment size</h4>
            <span class="fs-5"><%= project.apartment_size %> </span>
          </div>

          <div class="info d-flex align-items-center gap-5 my-3">
            <img width="50" src="\images\Roadside_Measurement.png" alt="">
            <h4>Road Size</h4>
            <span class="fs-5"><%= project.road_size %> </span>
          </div>

          <div class="info d-flex align-items-center gap-5 my-3">
            <img width="50" src="\images\Parking.png" alt="">
            <h4>Parking</h4>
            <span class="fs-5"><%= project.parking %> </span>
          </div>

          <div class="info d-flex align-items-center gap-5 my-3">
            <img width="50" src="\images\Address.png" alt="">
            <h4>Land Size</h4>
            <span class="fs-5"><%= project.land_size %> </span>
          </div>

          <div class="info d-flex align-items-center gap-5 my-3">
            <img width="50" src="\images\Units_v2.png" alt="">
            <h4>Units</h4>
            <span class="fs-5"><%= project.units %> </span>
          </div>

          <div class="info d-flex align-items-center gap-5 my-3">
            <img width="50" src="\images\Floors.png" alt="">
            <h4>Floors</h4>
            <span class="fs-5"><%= project.floors %> </span>
          </div>

          <div class="info d-flex align-items-center gap-5 my-3">
            <img width="50" src="\images\Handover-Time.png" alt="">
            <h4>Handover Time</h4>
            <span class="fs-5"><%= project.handover_time %> </span>
          </div>
        </div>

        <button class="c_btn py-2 px-5 mt-3">Learn More</button>
      </div>
    </div>

    <div class="row my-5">
      <div class="col-1"></div>
      <div class="col-10">
        <%- project.description %> 
      </div>
      <div class="col-1"></div>
    </div>

    <h2 class="mt-5">Project Images</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4 my-3">

      <% projectImages.forEach(image => { %>
        <div class="col">
          <div class="card h-100" style="background-size: cover;">
            <img width="100%" height="100%" src="/upload/projects/<%= image %> " alt="...">
          </div>
        </div>
      <% }) %> 

      </div>
    </div>
  </div>



  <%- include("../partials/footer") %>